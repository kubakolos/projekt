<p id="notice"><%= notice %></p>

<h1>Listing Employee Details</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Address</th>
      <th>House number</th>
      <th>Phone number</th>
      <th>Postal code</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_details.each do |employee_detail| %>
      <tr>
        <td><%= employee_detail.city %></td>
        <td><%= employee_detail.address %></td>
        <td><%= employee_detail.house_number %></td>
        <td><%= employee_detail.phone_number %></td>
        <td><%= employee_detail.postal_code %></td>
        <td><%= employee_detail.employee %></td>
        <td><%= link_to 'Show', employee_detail %></td>
        <td><%= link_to 'Edit', edit_employee_detail_path(employee_detail) %></td>
        <td><%= link_to 'Destroy', employee_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

