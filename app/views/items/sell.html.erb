    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <h1>Faktura nr. #<%= @invoice.id %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-5">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>OD: Kuba Kołos</h4>
            </div>
            <div class="panel-body">
              <p>
                Address: Krakow <br>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xs-5 col-xs-offset-2 text-right">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>Do : <a href="#"><%= @invoice.client_name + " " + @invoice.client_surname %></a></h4>
            </div>
            <div class="panel-body">
              <p>
                Address: <%= @invoice.client_address %> <br>
              </p>
            </div>
          </div>
        </div>
      </div>
      <!-- / end client details section -->
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>
              <h4>Nazwa Towaru</h4>
            </th>
            <th>
              <h4>Ilosc</h4>
            </th>
            <th>
              <h4>Cena</h4>
            </th>
            <th>
              <h4>Suma</h4>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @item.name %></td>
            <td><%= @invoice.quantity %></td>
            <td><%= @item.price %></td>
            <td><%= @item.price * @invoice.quantity %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="col-xs-5">
            <h4>Total: <%= @item.price * @invoice.quantity %> zł</h4> 
            <h4>TAX: <%= @item.vat %> %</h4> 
            <h4>Total: <%= (@item.price * @invoice.quantity - @item.price * @invoice.quantity * @item.vat).round(2) %> zł</h4>
          </p>
        </div>
      </div>
