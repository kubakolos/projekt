<!DOCTYPE html>
<html>
<head>
  <title>Storage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="collapse navbar-collapse">
        
     
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
                <li class="dropdown">
                  <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
                    <i class="glyphicon glyphicon-user"></i> <%= current_user.email %> <span class="caret"></span></a>
                  <ul id="g-account-menu" class="dropdown-menu" role="menu">                    
                    <li><%= link_to destroy_user_session_path, :method => :delete do %>
                          <i class="glyphicon glyphicon-off"> Logout</i>
                        <% end %>
                    </li> 
                    <li>
                      <!-- zmien hasło -->
                    </li> 
                  </ul>
                </li>
            <% else %>
              <li><%= link_to "Zaloguj się", new_user_session_path %></li> 
              <li style="margin-top:15px;"> lub </li>
              <li><%= link_to "Zarejestruj się",  new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>

  <p class="alert"><%= alert %></p>




<%= yield %>

</body>
</html>
